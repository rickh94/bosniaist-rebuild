{% macro card(post) %}
  <a href="{{ post.url }}"
     class="block shadow bg-white text-black rounded p-4 selectable hover:transform hover:-translate-y-1 hover:shadow-lg hover:bg-amber-50 hover:bg-slate-300 focus:transform focus:-translate-y-1 normal-transition"
     title="View Post"
  >
    <h1 class="text-xl font-bold">{{ post.data.title }}</h1>
    <p class="text-gray-800 italic">{{ post.data.date | niceDate }}</p>
    <p class="text-lg mb-1">{{ post.data.snippet }}</p>
    <p>Read more...</p>
  </a>
{% endmacro %}
