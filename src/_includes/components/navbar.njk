<style>
    [x-cloak] {
        display: none;
    }
</style>
{% set navPages = collections.all | eleventyNavigation %}

<div x-cloak x-data="{ menuOpen: false }">
  <header class="flex justify-between items-center px-4 lg:px-8 lg:pt-4 py-2 h-16 z-20 bg-amber-100" x-cloak>
    {% include "components/sitetitle.njk" %}
    {#  Desktop nav menu  on lg and larger #}
    <nav class="hidden lg:flex space-x-1 lg:space-x-2 items-center">
      {%- for entry in navPages %}
        {% if not entry.hideOnDesktop %}
          {% if entry.cta %}
            <a href="{{ entry.url | url }}"
               class="inline lg:block px-2 py-1 text-center bg-black text-lg font-bold rounded text-white transition ease-in-out duration-300 hover:transform hover:-translate-y-1 focus:transform focus:-translate-y-1 selectable">{{ entry.title }}</a>
          {% else %}
            <a href="{{ entry.url | url }}" class="nav-link">{{ entry.title }}</a>
          {% endif %}
        {% endif %}
      {%- endfor %}
    </nav>
    {#    nav menu button on md and smaller #}
    <div class="items-center lg:hidden">
      <button class="flex gap-1 items-center font-bold text-xl text-black outline-none ease-in-out duration-300 selectable"
              title="Open Navigation"
              @click="menuOpen = true"
      >
        Menu
        {#       Hamburger menu icon #}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
        </svg>
      </button>
    </div>
  </header>
  {#  Mobile nav menu, with slide from right animation #}
  <div class="top-0 left-0 absolute w-screen h-screen z-50 bg-white pt-2" x-show="menuOpen"
       x-transition:enter="transition ease-out duration-300 transform"
       x-transition:enter-start="translate-x-full"
       x-transition:enter-end="translate-x-0"
       x-transition:leave="transition ease-in duration-300 transform"
       x-transition:leave-start="translate-x-0"
       x-transition:leave-end="translate-x-full"
  >
    {#    graphic/elements at item #}
    {#    <div class="absolute bottom-0 w-full -z-10"> #}
    {#    </div> #}
    <div class="flex justify-between items-center px-4 pt-1">
      {% include "components/sitetitle.njk" %}
      <button class="text-black border-2 rounded border-black" title="Close Navigation" @click="menuOpen = false">
        {#        framed x button #}
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-6 w-6"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor"
             stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

    </div>
    <nav class="grid grid-cols-1 gap-4 sm:gap-6 p-6 max-w-lg mx-auto mt-4 sm:mt-16">
      {%- for entry in navPages %}
        {% if not entry.hideOnMobile %}
          {% if entry.cta %}
            <a href="{{ entry.url | url }}"
               class="inline lg:block px-2 py-1 text-center bg-black text-lg font-bold rounded text-white transition ease-in-out duration-300 hover:transform hover:-translate-y-1 focus:transform focus:-translate-y-1 selectable">{{ entry.title }}</a>
          {% else %}
            <a href="{{ entry.url | url }}" class="nav-link">{{ entry.title }}</a>
          {% endif %}
        {% endif %}
      {%- endfor %}
    </nav>
  </div>
</div>
