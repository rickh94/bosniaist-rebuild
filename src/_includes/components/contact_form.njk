<script src="https://unpkg.com/@botpoison/browser" async></script>
<form
  action="{{ env.formsparkURL }}"
  class="flex-col w-full" id="contact-form"
  data-botpoison-public-key="{{ env.botpoisonPublicKey }}"
>
  {#      honeypot and formspark configuration #}
  <input type="hidden" name="_important" id="_important">
  <input type="hidden" name="_redirect" value="{{ env.url }}/message-sent">
  <input type="hidden" name="_append" value="false">
  <input type="hidden" name="_error" value="{{ env.url }}/message-failed">
  <div class="flex-col mb-1">
    <h3 class="text-2xl text-left font-bold">Contact Us</h3>
    <h6 class="text-slate-900">We'd love to hear from you about how you want to help or if you just want more
      information!
    </h6>
  </div>
  <div class="flex gap-2 w-full flex-col md:flex-row">
    <div class="w-full gap-3 md:w-1/3 flex flex-col">
      <div class="form-control">
        <label for="name" class="font-bold md:text-lg mb-1 block">Name</label>
        <input type="text" name="name" id="name" required placeholder="Your Name">
      </div>
      <div class="form-control">
        <label for="email" class="font-bold md:text-lg mb-1 block">Email</label>
        <input type="email" name="email" id="email" required placeholder="Your Email" class="">
      </div>
    </div>
    <div class="form-control md:w-2/3">
      <label for="message" class="font-bold md:text-lg block mb-1">Message</label>
      <textarea name="message"
                id="message"
                required
                placeholder="I'm interested in learning more about the trip"
                class="h-[7.5rem] w-full placeholder-gray-500 text-black bg-white p-2 sm:flex-grow shadow focus:shadow-amber-100 focus:text-black border border-stone-900 focus:border-amber-700 transition ease-out duration-200 focus:outline-none focus:bg-white"
                spellcheck
      ></textarea>
    </div>
  </div>
  <div class="mt-3 sm:mt-2 flex flex-col sm:flex-row gap-2 justify-end">
    <button type="submit" class="submit-button selectable" id="submit-button">Send</button>
  </div>

</form>

